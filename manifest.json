{
  "manifest_version": 2,

  "name": "RtReviewOverlay",
  "description": "Rotten, or Fresh?",
  "version": "0.1",

  "content_scripts": [{
    "matches": [
      "https://www.amazon.com/*"
    ],
    "js":["contentscript.js"]
  }],

  "permissions": [
    
    "*://*.rottentomatoes.com/*",
    "*://*.google.com/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["images/*.gif", "images/*.png"],

  "icons": {
    "16": "images/pop_16.png",
    "32": "images/pop_32.png",
    "48": "images/pop_48.png",
    "128": "images/pop_128.png"
  }
}
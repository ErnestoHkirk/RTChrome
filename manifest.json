{
  "manifest_version": 2,

  "name": "P.O.P - PrimeVideo Overlay Pop-up",
  "description": "Overlays Amazon Prime Instant Video™ with Rotten Tomatoes™ movie and TV scores and ratings.",
  "version": "1.17", 

  "content_scripts": [{
    "matches": [
      "https://www.amazon.com/Amazon-Video/*"
    ],
    "js":["contentscript.js"]
  }],

  "permissions": [
    
    "*://*.rottentomatoes.com/*",
    "*://*.google.com/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["images/*.gif", "images/*.png"],

  "icons": {
    "16": "images/pop_16.png",
    "32": "images/pop_32.png",
    "48": "images/pop_48.png",
    "128": "images/pop_128.png"
  }
}